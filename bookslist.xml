<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/txt_bno"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"        android:id="@+id/txt_title"
        android:layout_below="@+id/txt_bno"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_author"
        android:layout_below="@+id/txt_title"
        android:layout_alignParentStart="true"
        android:text="New Text" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_pub"
        android:layout_below="@+id/txt_author"
        android:layout_alignParentStart="true"
        android:text="New Text" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@android:color/black"
        android:layout_below="@+id/txt_status"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/txt_desc"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txt_pub" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/txt_sp"
        android:layout_below="@+id/txt_desc"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/txt_rp"
        android:layout_below="@+id/txt_sp"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/txt_type"
        android:layout_below="@+id/txt_rp"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:textStyle="bold"
        android:id="@+id/txt_status"
        android:layout_below="@+id/txt_type"
        android:layout_alignParentStart="true" />
</RelativeLayout>